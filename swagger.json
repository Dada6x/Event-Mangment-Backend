{
  "openapi": "3.0.0",
  "info": {
    "title": "Event Management API",
    "version": "1.0.0",
    "description": "API documentation for the Event Management backend"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "665f1a1234567890abcdef12"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "example": "secret123",
            "writeOnly": true
          },
          "role": {
            "type": "string",
            "enum": [
              "user",
              "admin"
            ],
            "example": "user"
          },
          "avatar": {
            "type": "string",
            "nullable": true,
            "example": "https://example.com/avatar.jpg"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-01T12:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-01T12:30:00.000Z"
          }
        }
      },
      "Venue": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "668f1a1234567890abcdef12"
          },
          "name": {
            "type": "string",
            "example": "Royal Lounge"
          },
          "type": {
            "type": "string",
            "enum": [
              "lounge",
              "theatre"
            ],
            "example": "lounge"
          },
          "address": {
            "type": "string",
            "example": "Main Street 123"
          },
          "image": {
            "type": "string",
            "example": "https://example.com/lounge.jpg"
          },
          "baseCost": {
            "type": "number",
            "example": 1500
          },
          "maxCapacity": {
            "type": "integer",
            "nullable": true,
            "example": 200
          },
          "isActive": {
            "type": "boolean",
            "example": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Event": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "666f1a1234567890abcdef12"
          },
          "organizerId": {
            "type": "string",
            "description": "User ID of the organizer",
            "example": "665f1a1234567890abcdef12"
          },
          "eventName": {
            "type": "string",
            "example": "Birthday Party"
          },
          "eventDescription": {
            "type": "string",
            "example": "Cool party with friends"
          },
          "occasionType": {
            "type": "string",
            "enum": [
              "public",
              "private"
            ],
            "example": "private"
          },
          "eventDate": {
            "type": "string",
            "description": "Event date (e.g. YYYY-MM-DD)",
            "example": "2025-12-10"
          },
          "eventTime": {
            "type": "string",
            "description": "Event time (e.g. HH:mm)",
            "example": "20:00"
          },
          "price": {
            "type": "number",
            "description": "Total price calculated on server",
            "example": 500
          },
          "invitationLink": {
            "type": "string",
            "example": ""
          },
          "maxAttendance": {
            "type": "integer",
            "example": 50
          },
          "eventType": {
            "type": "string",
            "enum": [
              "wedding",
              "engagement",
              "graduation",
              "familyEvent",
              "photoSession",
              "musicalParty",
              "festival",
              "conference",
              "play",
              "custom"
            ],
            "example": "custom"
          },
          "locationType": {
            "type": "string",
            "enum": [
              "home",
              "lounge",
              "theatre"
            ],
            "example": "lounge"
          },
          "homeAddress": {
            "type": "string",
            "nullable": true,
            "example": "Some Street 456"
          },
          "venue": {
            "$ref": "#/components/schemas/EmbeddedVenue"
          },
          "services": {
            "$ref": "#/components/schemas/ServicesSelection"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-01T12:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-01T12:30:00.000Z"
          }
        }
      },
      "RequestEvent": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "777f1a1234567890abcdef12"
          },
          "requestType": {
            "type": "string",
            "enum": [
              "create",
              "edit",
              "cancel"
            ],
            "example": "create"
          },
          "status": {
            "type": "string",
            "enum": [
              "pending",
              "approved",
              "rejected"
            ],
            "example": "pending"
          },
          "requestedBy": {
            "type": "string",
            "description": "User ID who made the request",
            "example": "665f1a1234567890abcdef12"
          },
          "eventId": {
            "type": "string",
            "nullable": true,
            "description": "Existing Event ID (for edit/cancel)",
            "example": "666f1a1234567890abcdef12"
          },
          "event": {
            "$ref": "#/components/schemas/Event"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-01T12:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-01T12:05:00.000Z"
          }
        }
      }
    }
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "summary": "Login a user",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Logged in successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid credentials"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/auth/signup": {
      "post": {
        "summary": "Register a new user",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignupRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error or email already exists"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/me": {
      "get": {
        "summary": "Get current logged-in user",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Current user info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Authenticated"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (missing or invalid token)"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/my-events": {
      "get": {
        "summary": "Get all my accepted events",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of accepted events for current user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "count": {
                      "type": "integer",
                      "example": 2
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Event"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/events": {
      "post": {
        "summary": "Create a new event request",
        "tags": [
          "Events"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EventRequestCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Event creation request submitted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Event creation request submitted"
                    },
                    "data": {
                      "$ref": "#/components/schemas/RequestEvent"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "get": {
        "summary": "Get all my event requests",
        "tags": [
          "Events"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of my event requests",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "count": {
                      "type": "integer",
                      "example": 3
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/RequestEvent"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "patch": {
        "summary": "Submit an edit request for an existing event",
        "tags": [
          "Events"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EventRequestUpdate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Event edit request submitted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Event edit request submitted"
                    },
                    "data": {
                      "$ref": "#/components/schemas/RequestEvent"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Event not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/events/{id}": {
      "delete": {
        "summary": "Cancel an event request",
        "tags": [
          "Events"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the event request to cancel"
          }
        ],
        "responses": {
          "200": {
            "description": "Request cancelled successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Request cancelled successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Only pending requests can be cancelled"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Request not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "get": {
        "summary": "Get event request details by ID",
        "tags": [
          "Events"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the event request"
          }
        ],
        "responses": {
          "200": {
            "description": "Event request details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/RequestEvent"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Request not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/admin/users": {
      "get": {
        "summary": "Get all users (admin only)",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "count": {
                      "type": "integer",
                      "example": 10
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/User"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden (not admin)"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/admin/events": {
      "get": {
        "summary": "Get all accepted events (admin only)",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of events",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "count": {
                      "type": "integer",
                      "example": 5
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Event"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden (not admin)"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/admin/requests": {
      "get": {
        "summary": "Get all event requests (admin only)",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of all event requests",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "count": {
                      "type": "integer",
                      "example": 8
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/RequestEvent"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden (not admin)"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/admin/requests/{id}/approve": {
      "patch": {
        "summary": "Approve an event request",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the request to approve"
          }
        ],
        "responses": {
          "200": {
            "description": "Request approved and removed from queue",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Request approved and removed from queue"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "event": {
                          "$ref": "#/components/schemas/Event"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request or invalid request type"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden (not admin)"
          },
          "404": {
            "description": "Request not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/admin/requests/{id}/reject": {
      "patch": {
        "summary": "Reject an event request",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the request to reject"
          }
        ],
        "responses": {
          "200": {
            "description": "Request rejected successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Request rejected successfully"
                    },
                    "data": {
                      "$ref": "#/components/schemas/RequestEvent"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request or non-pending request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden (not admin)"
          },
          "404": {
            "description": "Request not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/services": {
      "get": {
        "summary": "Get all services (hospitality,Camera,MusicalBand....etc)",
        "tags": [
          "Services"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Services configuration loaded",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/ServicesConfig"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/services/venues": {
      "get": {
        "summary": "Get all active venues ",
        "tags": [
          "Services"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "lounge",
                "theatre"
              ]
            },
            "description": "Filter by venue type"
          }
        ],
        "responses": {
          "200": {
            "description": "List of active venues",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Venue"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
}